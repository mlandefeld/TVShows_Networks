@model IEnumerable<TVShowsNetworks.Models.TVnetwork>

@{
    ViewBag.Title = "Index";
}

<h2>TV Networks</h2>

<p>
    @using (Html.BeginForm("Index", "TVnetwork", FormMethod.Get))
    {
        <b>Search by Network</b>
        <br />
        @Html.TextBox("Search")<input type="submit" value="Search" />
    }
</p>

<p>
    @Html.ActionLink("Reset", "Index", "TVnetworks")
</p>

<div class="row">
    <div class="col-xs-6 col-md-3">
        <div class="img-thumbnail"></div>
            <img src="@Html.DisplayNameFor(model => model.Logo)" alt="...">
